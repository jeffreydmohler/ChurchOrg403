@model IEnumerable<ChurchOrganization.Models.Units>

@{
    ViewBag.Title = "Units";
}

<h2>Units</h2>

<p>
    @Html.ActionLink("Add a New Unit", "AddUnit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.unitCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.unitName)
        </th>
